<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragWelcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deik"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <!-- "Fragment A" -->

    <fragment
        android:id="@+id/fragLargeTitles"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        class="hu.smartcampus.views.fragments.FragmentTitles_" />

    <!-- "Fragment B" -->

    <fragment
        android:id="@+id/fragLargeDetails"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        class="hu.smartcampus.views.fragments.FragmentDetails_" />

</LinearLayout>